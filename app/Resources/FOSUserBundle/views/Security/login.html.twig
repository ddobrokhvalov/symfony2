{% extends '::base.html.twig' %}

{% block body %}

<div id="columnwrap">

{% if error %}
<div class="error">{{ error|trans }}</div>
{% endif %}

        <div id="content-main" class="span-13 prepend-1 colborder">

<form action="{{ path("fos_user_security_check") }}" method="post">
    <fieldset>
    <legend>Авторизация</legend>
    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
    <p><input type="text" id="username" name="_username" value="{{ last_username }}" /></p>

    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
    <p><input type="password" id="password" name="_password" /></p>

    <p><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</p>
    </fieldset>

    <p><input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
</form>

        </div>
        <div id="content-related" class="span-8 last">
                
        <div class="box"> 
                <h3>Справка:</h3> 
                
		<a href="/resetting/request">Сбросить пароль</a>
		<br />
                <a href="/help#support">Нашли ошибку?</a>
                <br />
                <a href="/help#where-to-get-password">Где мне взять пароль?</a> 
                <br /> 
                <a href="/help#about">Для чего нужна эта система?</a> 
                <br /> 
        </div> 
 
        </div>

</div>

{% endblock body %}
