<h1>Report</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>                <td>{{ entity.id }}</td>        </tr>
        <tr>
            <th>Day</th>                <td>{{ entity.day|date('Y-m-d H:i:s') }}</td>        </tr>
        <tr>
            <th>Minutes</th>                <td>{{ entity.minutes }}</td>        </tr>
        <tr>
            <th>Description</th>                <td>{{ entity.description }}</td>        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('report') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('report_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('report_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
